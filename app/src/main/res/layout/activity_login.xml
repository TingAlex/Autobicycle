<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:id="@+id/login_login"
    android:focusable="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--<ImageView-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
               <!--android:scaleType="centerCrop"-->
                <!--android:src="@drawable/ic_account_box_black_24dp"/>-->
           <!--<View-->
               <!--android:layout_gravity="center_vertical"-->
               <!--android:layout_margin="5dp"-->
               <!--android:layout_width="0.5dp"-->
               <!--android:background="@color/alplablack"-->
               <!--android:layout_height="30dp"/>-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="请输入您的手机号码"
                >
                <com.comsoftstar.inputedittext.SjieInputEditText
                    android:id="@+id/login_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:paddingRight="5dp"
                    android:inputType="phone"
                    android:gravity="center_vertical"
                    android:text=""/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--<ImageView-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:src="@drawaic_lock_blue_24dp24dp"/>-->
            <!--<View-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_margin="5dp"-->
                <!--android:layout_width="0.5dp"-->
                <!--android:background="@color/alplablack"-->
                <!--android:layout_height="30dp"/>-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="请输入6~20位密码">
                <com.comsoftstar.inputedittext.SjieInputEditText
                    android:id="@+id/login_password"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            >
            <CheckBox
                android:id="@+id/login_ischeck"
                android:layout_height="25dp"
                android:layout_width="25dp"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"/>
            <TextView
                android:id="@+id/register"
                android:textColor="@color/blue"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册账号"/>
        </LinearLayout>
        <Button
            android:id="@+id/login"
            android:layout_margin="25dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/red_kuang"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:text="登 录"/>
    </LinearLayout>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/login_load"
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:indicator="BallPulse"
        app:indicator_color="@color/blue"
        android:visibility="gone"
        />
</FrameLayout>
