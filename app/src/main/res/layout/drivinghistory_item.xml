<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    card_view:cardBackgroundColor="#ffffcc"
    card_view:cardElevation="10dp"
    card_view:cardCornerRadius="5dp"
    android:foreground = "?attr/selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/date"
            android:paddingLeft="15dp"
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="2017-06-08"/>
        <View
            android:layout_gravity="center_horizontal"
            android:layout_width="335dp"
            android:layout_height="0.1dp"
            android:background="#8f888888"/>
        <TextView
            android:id="@+id/time"
            android:paddingLeft="15dp"
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="06:51-08:23"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="6dp"
                android:padding="4dp">
                <TextView
                    android:id="@+id/start"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_point2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="撒旦法哈苏德恢复速度和反抗集和反抗集和反抗集散地"
                    android:textSize="14dp"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/end"
                    android:drawableLeft="@drawable/ic_point"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="撒旦法哈苏德恢复速度和反抗集散地"
                    android:textSize="14dp"/>
            </LinearLayout>
            <ImageView
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_more"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>