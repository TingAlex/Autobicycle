<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/toolbar_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0e0e0"
        android:orientation="vertical">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_marginTop="15dp"
                android:background="@drawable/item_kuang">

                <TextView
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="推送设置"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_chevron_right_gray_24dp" />
            </TableRow>

            <TableRow android:background="@drawable/item_kuang">

                <TextView
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="语言设置"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_chevron_right_gray_24dp" />
            </TableRow>

            <TableRow
                android:layout_marginTop="15dp"
                android:background="@drawable/item_kuang">

                <TextView
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="修改密码"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_chevron_right_gray_24dp" />
            </TableRow>

            <TableRow android:background="@drawable/item_kuang">

                <TextView
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="更换手机号"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_chevron_right_gray_24dp" />
            </TableRow>

            <TableRow
                android:layout_marginTop="15dp"
                android:background="@drawable/item_kuang">

                <TextView
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="添加/解绑电动车"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_chevron_right_gray_24dp" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/exitlogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="25dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/red_kuang"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="17dp" />
    </LinearLayout>
</layout>
