<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/settingtoolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/blackgray"
        android:title="设置">
    </android.support.v7.widget.Toolbar>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TableRow
            android:layout_marginTop="15dp"
            android:background="@drawable/item_kuang"
            >
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_height="48dp"
                android:textSize="16dp"
                android:text="推送设置"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_chevron_right_gray_24dp"/>
        </TableRow>
        <TableRow
            android:background="@drawable/item_kuang"
            >
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_height="48dp"
                android:textSize="16dp"
                android:text="语言设置"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_chevron_right_gray_24dp"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="15dp"
            android:background="@drawable/item_kuang"
            >
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_height="48dp"
                android:textSize="16dp"
                android:text="修改密码"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_chevron_right_gray_24dp"/>
        </TableRow>
        <TableRow
            android:background="@drawable/item_kuang"
            >
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_height="48dp"
                android:textSize="16dp"
                android:text="更换手机号"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_chevron_right_gray_24dp"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="15dp"
            android:background="@drawable/item_kuang"
            >
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_height="48dp"
                android:textSize="16dp"
                android:text="添加/解绑电动车"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_chevron_right_gray_24dp"/>
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/exitlogin"
        android:layout_margin="25dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/red_kuang"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:text="退出登录"/>
</LinearLayout>
