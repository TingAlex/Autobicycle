<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="onclicklisten"
            type="android.view.View.OnClickListener"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0e0e0"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/blackgray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/back_register"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:onClick="@{onclicklisten}"
                        android:src="@drawable/ic_chevron_left_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:text="注册"/>
                </LinearLayout>
            </android.support.v7.widget.Toolbar>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:layout_span="3"
                        android:textColor="#5f000000"
                        android:text="请务必填写必要信息"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/item_kuang">

                    <TextView
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"

                        android:textColor="@color/black"
                        android:text="手机号"/>

                    <EditText
                        android:id="@+id/login_phone"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:background="@null"
                        android:inputType="phone"
                        android:textSize="15dp"
                        android:hint="常用手机号"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/item_kuang">
                    <TextView
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:text="验证码"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <EditText
                            android:id="@+id/login_number"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="25dp"
                            android:background="@null"
                            android:inputType="text"
                            android:textSize="15dp"
                            android:hint="请输入验证码"/>
                        <com.comsoftstar.autobicycle.Control.CountDownButton
                            android:id="@+id/btn_send"
                            android:layout_margin="8dp"
                            android:padding="5dp"
                            android:minWidth="45dp"
                            android:layout_width="wrap_content"
                            android:text="发 送"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:background="@color/black"
                            android:layout_height="match_parent"
                            app:countDown="60000"
                            app:countDownFormat="%ds后重试"
                            app:countDownInterval="1000"
                            app:enableCountDown="true"
                            app:cdFinishText="重新获取"
                            />
                    </LinearLayout>


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/item_kuang">

                    <TextView
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:text="密码"/>

                    <EditText
                        android:id="@+id/login_password0"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:textSize="15dp"
                        android:hint="6~20位数字或字母(不能为纯数字)"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/item_kuang">

                    <TextView
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:text="确认密码"/>

                    <EditText
                        android:id="@+id/login_password1"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:textSize="15dp"
                        android:hint="请确保两次输入一致"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/item_kuang">

                    <TextView
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:text="PacbID"/>

                    <EditText
                        android:id="@+id/login_name"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:background="@null"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:hint="扫码"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">
                        <ImageButton
                            android:id="@+id/scan1"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_gravity="center_vertical|right"
                            android:onClick="@{onclicklisten}"
                            android:textSize="13dp"
                            android:src="@drawable/ic_scancode"
                            android:backgroundTint="@color/blackgray"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/item_kuang">

                    <TextView
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:text="采集ID"/>

                    <EditText
                        android:id="@+id/login_name2"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:background="@null"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:hint="扫码"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">
                    <ImageButton
                        android:id="@+id/scan2"
                        android:layout_width="40dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:onClick="@{onclicklisten}"
                        android:textSize="13dp"
                        android:backgroundTint="@color/blackgray"
                        android:textColor="@color/white"
                        android:src="@drawable/ic_scancode"/>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_span="3">

                        <CheckBox
                            android:id="@+id/enter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:layout_span="3"
                            android:text="我确认并接受《软件许可及服务协议》"/>
                    </LinearLayout>

                </TableRow>
            </TableLayout>
        </LinearLayout>
        <Button
            android:layout_gravity="bottom"
            android:id="@+id/next_register"
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:gravity="center"
            android:background="@drawable/red_kuang"
            android:onClick="@{onclicklisten}"
            android:textSize="20dp"
            android:enabled="false"
            android:textColor="@color/gray"
            android:text="确  认"/>
    </FrameLayout>
</layout>
