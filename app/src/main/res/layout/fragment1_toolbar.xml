<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/kuang"
    android:orientation="horizontal">
<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:padding="10dp">
    <TextView
        android:layout_marginLeft="10dp"
        android:text="Logo"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:id="@+id/main_title"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <ImageView
        android:layout_toRightOf="@+id/main_title"
        android:layout_width="40dp"
        android:id="@+id/main_setting"
        android:layout_height="match_parent"
        android:src="@drawable/raw_1504183549"
        android:layout_weight="1"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_toRightOf="@+id/main_setting"
        android:id="@+id/main_mail"
        android:layout_height="match_parent"
        android:src="@drawable/raw_1504183586"
        android:layout_weight="1"/>


</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="6dp"
        android:gravity="center_vertical"
       >
        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/main_switch"
            android:layout_weight="1">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/raw_1504183598"
                android:layout_weight="1"/>
            <TextView
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="未连接"
                android:textSize="13dp"/>
        </FrameLayout>
        <FrameLayout
            android:background="@drawable/main_switch"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="150dp"
            android:layout_height="30dp">
            <ImageView
                android:layout_marginLeft="3dp"
                android:layout_gravity="center_vertical"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/raw_1504183608"
                android:layout_weight="1"/>
            <TextView
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13dp"
                android:text="未连接"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>